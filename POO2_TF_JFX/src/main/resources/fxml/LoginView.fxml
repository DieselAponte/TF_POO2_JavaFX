<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.poo2_tf_jfx.controller.LoginController"
            prefHeight="400.0" prefWidth="600.0">

    <Label layoutX="50" layoutY="50" text="Usuario"/>

    <TextField fx:id="txtUsername" layoutX="150" layoutY="50"/>

    <Label layoutX="50" layoutY="100" text="Contrasena: "/>

    <PasswordField fx:id="txtPassword" layoutY="100" layoutX="150"/>

    <Button fx:id="btn_login" layoutY="160" layoutX="150" text="Iniciar Sesion"
            onAction="#onLoginClicked"/>

    <Button fx:id="btn_AccountCreation" layoutX="260" layoutY="160" text="Crear Cuenta"
            onAction="#onCrearCuentaCliked"/>
</AnchorPane>
